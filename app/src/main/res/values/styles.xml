<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.DarkScreen">
    <item name="android:windowBackground">@color/windowBackgroundDark</item>
  </style>

  <style name="HomeButton" parent="Base.Widget.AppCompat.Button.Colored">
    <item name="android:minHeight">58dp</item>
  </style>

  <style name="HomeButton.Inverse">
    <item name="android:backgroundTint">@color/colorHighlight</item>
  </style>

</resources>
