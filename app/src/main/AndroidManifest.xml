<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.payup">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".app.App"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity android:name="com.payup.app.ui.home.HomeActivity"/>

    <activity
        android:name="com.payup.app.ui.payment.PaymentActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.DarkScreen"
        android:windowSoftInputMode="stateAlwaysHidden"/>

    <activity
        android:name="com.payup.app.ui.payment.ConfirmationActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.DarkScreen"/>

    <activity-alias
        android:name=".Launcher"
        android:targetActivity="com.payup.app.ui.home.HomeActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity-alias>

  </application>

</manifest>
